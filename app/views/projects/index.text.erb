<%
  max_project_name_length = @projects.map { |p| p.name.length }.max
  meter_length = 50
%>
<% @projects.each do |project| %>
<%= project.name.ljust(max_project_name_length) %> |<%= ("=" * ([project.current_weekly_ratio, 1].min * meter_length).round).ljust(meter_length) %>| <%= number_to_percentage(project.current_weekly_percentage, precision: 0).ljust(4) %> (<%= project.current_weekly_hours.round %>/<%= project.expected_weekly_hours %>)
<% end %>
