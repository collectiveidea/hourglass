<div class="user-list container">
  <div class="page-header">
    <nav class="pull-right">
      <%= link_to fa_icon("plus", text: "Add User"), new_user_path, class: "btn btn-primary" %>
    </nav>
    <h1>Users</h1>
  </div>
  <table class="user-table table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr class="user-row">
          <td class="user-row-name"><%= user.name %></td>
          <td class="user-row-email"><%= user.email %></td>
          <td class="user-row-actions">
            <%= link_to fa_icon("pencil", text: "Edit"), edit_user_path(user), class: "btn btn-xs btn-default" %>
            <%= link_to fa_icon("archive", text: "Archive"), user, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
